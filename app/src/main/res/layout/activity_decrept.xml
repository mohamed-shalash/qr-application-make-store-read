<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DecreptActivity"
    android:background="#16909D">

    <ImageView
        android:id="@+id/QR_Decrept_ACT_imageView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/no_encryption_24" />

    <Button
        android:id="@+id/QR_Decrept_ACT_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="scan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/copy_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_content_copy_24"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#16909D"
            />
    <TextView
        android:id="@+id/QR_Decrept_ACT_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="#0F5A34"
        android:textSize="24sp" />
    </LinearLayout>
    <Button
        android:id="@+id/QR_Decrept_ACT_dec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="decrept image" />

</LinearLayout>